<header>
  <nav class="nav-container">
    <ul class="nav-list" id="lista">
      <li class="nav-item">
        <a href="/products?limit=10&page=1" id="cartref">
          <img
            src="../public/img/Astros-nav.png"
            alt="logo"
            class="logo-image"
            id="logo"
          />
        </a>
      </li>
      <li class="nav-item btn">
        <a id="delete-time" onclick="deleteAllUsers()">
          <i class="fa-solid fa-clock"></i>
        </a>
      </li>
      <li class="nav-item btn">
        <a href="/products?limit=10&page=1" id="back-to-users">
          <i class="fa-solid fa-backward"></i>
        </a>
      </li>
    </ul>
  </nav>
</header>
<br />
{{#if anyUsers}}
  <div class="user-list">
    {{#each list}}
      <div class="user-container">
        <div class="user-row">
          <img class="img-profile" src="{{this.photo}}" alt="Usuario" />
          <p class="p-name">
            {{this.first_name}}
            {{this.last_name}}
          </p>
        </div>
        <p class="p-email">
          {{this.email}}
        </p>
        <p class="p-role">
          {{this.role}}
        </p>
        <p class="p-last">
          {{this.last_connection}}
        </p>
        <div class="icons">
          <a
            class="btncrud deleter"
            onclick="deleteUser(this.dataset.userid)"
            data-userid={{this.id}}
          ><i class="fa-solid fa-trash"></i></a>
          <a
            class="btncrud upgrader"
            onclick="upgradeUser(this.dataset.userid)"
            data-userid={{this.id}}
          ><i class="fa-solid fa-code-compare"></i></a>
        </div>
      </div>

    {{/each}}
  </div>
{{else}}
  <p class="">the user gallery is empty</p>
{{/if}}

<script src="https://unpkg.com/@popperjs/core@2"></script>
<script src="https://unpkg.com/tippy.js@6"></script>
<script src="../public/js/users.js" type="application/javascript"></script>